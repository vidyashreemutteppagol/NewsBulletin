<% include ./partials/header %>

<div class="mb-2"></div>

<!-- Display News items with title and publisher as Cards -->
<% newsdata.forEach(function(news){ %>
    <div class="card w-100 text-white bg-dark mb-3">
        <div class="card-body">
            <h5 class="card-title">
                <a target="_blank" rel="noopener noreferrer" href="<%= news.articleLink %>" id="article-title"><%= news.articleTitle %></a>
            </h5>
            <p class="card-text">
                <a target="_blank" rel="noopener noreferrer" href="http://<%= news.publisherLink %>" id="publisher"><%= news.publisher %></a>
            </p>
        </div>
    </div>
<% }); %>

<div style="padding-top: 10px;"></div>

    <!-- Pagination -->
    <div class="container">        
        <% if (pages && pages > 0) { %>
        <ul class="pagination justify-content-center">
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
            <li><a href="/sort/sortbytitle" class="page-link">First</a></li>
            <% } %>
        
            <% if (current == 1) { %>
            <li class="page-item disabled"><a class="page-link">«</a></li>
            <% } else { %>
            <li><a class="page-link" href="/sort/sortbytitle/?page=<%= Number(current) - 1 %>">«</a></li>
            <% } %>
        
            <% var i = (Number(current) > 3 ? Number(current) - 1 : 1) %>
            <!-- <% if (i !== 1) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %> -->
            <% for (; i <= (Number(current) + 1) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="page-item active"><a class="page-link"><%= i %></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/sort/sortbytitle/?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <!-- <% if (i == Number(current) + 1 && i < pages) { %>
            <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %> -->
            <% } %>
        
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">»</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/sort/sortbytitle/?page=<%= Number(current) + 1 %>">»</a></li>
            <% } %>
        
            <% if (current == pages) { %>
            <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link" href="/sort/sortbytitle/?page=<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
    
</body>
</html>